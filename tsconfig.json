{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "paths": {
      "@api/*": ["src/api/*"],
      "@shared/*": ["src/shared/*"],
      "@middleware/*": ["src/common/middleware/*"],
      "@helper/*": ["src/common/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
